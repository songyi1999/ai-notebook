server {
    listen 80;
    server_name localhost;

    # ASR WebSocket代理
    location /asr {
        proxy_pass $ASR_SERVER_URL;
        
        # WebSocket支持
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 基础代理配置
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400s;
    }

    # API 反向代理
    location /api/v1/chat/completions {
        proxy_pass $API_BASE_URL/api/v1/chat/completions;
        
        # 基础代理配置
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Authorization "Bearer $OPENAI_API_KEY";
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket 支持
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # SSE 配置
        proxy_set_header Connection '';
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 86400s;
    }

    # 文件上传 API 代理
    location /api/v1/upload {
        proxy_pass $API_BASE_URL/api/v1/upload;
        
        # 基础代理配置
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 文件上传配置
        client_max_body_size 10M;
        proxy_request_buffering off;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # 图片上传转换 API 代理
    location /api/v1/upload-and-convert {
        proxy_pass $API_BASE_URL/api/v1/upload-and-convert;
        
        # 基础代理配置
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 图片转换配置 - 需要更长的超时时间
        client_max_body_size 10M;
        proxy_request_buffering off;
        proxy_read_timeout 600s;  # 10分钟超时，因为DocExt转换可能需要时间
        proxy_send_timeout 600s;
        proxy_connect_timeout 30s;
    }

    # 文档聊天 API 代理
    location /api/v1/chat-with-documents {
        proxy_pass $API_BASE_URL/api/v1/chat-with-documents;
        
        # 基础代理配置
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 文档上传和流式响应配置
        client_max_body_size 50M;  # 支持大文档上传
        proxy_request_buffering off;
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 600s;  # 10分钟超时，支持大文档处理
        proxy_send_timeout 600s;
        proxy_connect_timeout 30s;
        
        # SSE 流式响应支持
        proxy_set_header Connection '';
    }

    # 文件访问 API 代理
    location /api/v1/files/ {
        proxy_pass $API_BASE_URL/api/v1/files/;
        
        # 基础代理配置
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 静态文件配置
        proxy_cache_valid 200 1h;
        add_header Cache-Control "public, max-age=3600";
    }

    # 前端静态文件
    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ /index.html;
        
       
    }
} 